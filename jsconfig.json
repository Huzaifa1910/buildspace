{
	"compilerOptions": {
	  "module": "Node16",
	  "target": "ES2022",
	  "checkJs": true,  /* Typecheck .js files. */
	  "lib": [
		"ES2022"
	  ],
	  "baseUrl": ".",  /* Base directory for module resolution */
	  "paths": {
		"*": [
		  "node_modules/*",
		  "*"
		]
	  }
	},
	"include": [
	  "src/**/*.js",
	  "extension.js"
	],
	"exclude": [
	  "node_modules"
	]
  }
  